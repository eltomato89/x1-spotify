{% extends 'portal.base.html.twig' %}

{% block page_title %}Spotify Connect{% endblock %}
{% block page_subtitle %}Player{% endblock %}

{% block page_content %}
    <div class="row">
    {% for device in spotifyDevices %}
        <div class="col-sm-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        {{ device.name }}
                    </h3>
                </div>
                <div class="panel-body">
                        <div class="form-group">
                            <label for="playerId_{{ loop.index }}">Player ID</label>
                            <input type="text" class="form-control" name="playerId" id="playerId_{{ loop.index }}" value="{{ device.id }}" readonly>
                        </div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>

{% endblock %}
